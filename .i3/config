# Create Log out, Reboot, Poweroff bindings
# https://gist.github.com/athmane/6200074#file-gistfile1-txt-L1
# https://gist.github.com/jonyamo/5675359#gistcomment-1581382
mode "Exit (L)ogout, (S)uspend, (R)eboot, (P)oweroff" {
        bindsym $mod+l exit

        bindsym $mod+s exec dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 \
            "org.freedesktop.login1.Manager.Suspend" boolean:true

        bindsym $mod+r exec dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 \
            "org.freedesktop.login1.Manager.Reboot" boolean:true

        bindsym $mod+p exec dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 \
            "org.freedesktop.login1.Manager.PowerOff" boolean:true

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Shift+e mode "Exit (L)ogout, (S)uspend, (R)eboot, (P)oweroff"

